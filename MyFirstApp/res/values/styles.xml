<resources>


    <!-- Base application theme. -->
    <style name="OurTechTheme" parent="AppTheme" />

    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/light_Bg</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>

        <!--<item name="android:toolbarStyle">@style/MyDarkToolbarStyle</item>-->
        <item name="android:colorBackground">@color/bg_allLayouts</item>

        <item name="android:textColorPrimary">@color/textHeadings</item>
        <item name="android:textColorPrimaryInverse">@color/textViewHeadingAll</item>
        <item name="android:colorForeground">@color/foreground_material_dark</item>
        <item name="android:textColorSecondary">@color/textHeadings</item>
        <item name="android:textColorSecondaryInverse">@color/textHeadings</item>
        <item name="android:textColorHint">@color/editTextHint</item>
        <item name="android:windowBackground">@color/colorHighlightWhite</item>


    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="MyDarkToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:gravity">center_vertical</item>

        <item name="android:actionButtonStyle">@style/MyDrawerArrowToggle</item>
        <!--<item name="popupTheme">@style/PopupMenuStyle</item>-->
        <!--<item name="actionButtonStyle">@style/MyActionButtonStyle</item>-->

    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:color">@color/actionBarToggle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="datepicker" parent="@android:style/Widget.DeviceDefault.DatePicker">
        <item name="android:focusedMonthDateColor">@android:color/holo_red_dark</item>


    </style>

    <style name="timepicker" parent="@android:style/Widget.DeviceDefault.DatePicker">
        <item name="android:focusedMonthDateColor">@android:color/holo_red_dark</item>

    </style>

    <style name="star">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">*</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="regtext">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#cccc33</item>
    </style>

    <style name="regedtext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#7a7979</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="regtextcolon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#cccc33</item>
        <item name="android:text">:</item>
    </style>

    <style name="regedit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:imeOptions">actionNext</item>
    </style>


    <!--  Transparent dialog -->
    <style name="TransparentProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="holoSpinner" parent="@android:style/Theme">
        <item name="android:background">#d3d3d3</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#959494</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:paddingLeft">12dip</item>
    </style>

    <style name="buttonAll">

        <item name="android:background">@color/buttonAll_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PagerTabStripText">
        <item name="android:textSize">20dp</item>

        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/light_grey</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>

    </style>
