                    <TextView
                        android:id="@+id/img_name"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/ic_gender" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <!-- <TextView  android:layout_width="match_parent"   android:paddingLeft="12dp" android:paddingBottom="7dp"
            android:layout_height="wrap_content" android:textColor="#000000"  android:id="@+id/et_name" /> -->

                        <TextView
                            android:id="@+id/et_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/code"
                            android:hint="Gender"
                            android:paddingBottom="7dp"
                            android:paddingLeft="12dp"
                            android:textColor="#1a3e6e"
                            android:textColorHint="#1a3e6e"
                            android:textSize="13dp" />


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/img_num"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/ic_mobile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <!-- <TextView  android:layout_width="match_parent"   android:paddingLeft="12dp" android:paddingBottom="7dp"
            android:layout_height="wrap_content" android:textColor="#000000"  android:id="@+id/et_phnumber" /> -->

                        <TextView
                            android:id="@+id/et_phnumbere"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/code"
                            android:hint="Mobile Number"
                            android:paddingBottom="7dp"
                            android:paddingLeft="12dp"
                            android:textColor="@color/textViewAll"
                            android:textColorHint="@color/editTextHint"
                            android:textSize="14dp" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnlogout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mybutton"
                        android:text="Logout" />

                </LinearLayout>


