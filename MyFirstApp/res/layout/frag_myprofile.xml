            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#30f0c01b"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:text="SIGNIN DETAILS"
                        android:textAlignment="center"
                        android:textColor="#1b3f6f"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageButton1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:gravity="end"

                        android:src="@mipmap/ic_edit_new" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/img_mail"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/ic_mail_new" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <!-- <TextView  android:layout_width="match_parent"   android:paddingLeft="12dp" android:paddingBottom="7dp"
            android:layout_height="wrap_content" android:textColor="#000000"  android:id="@+id/et_mail"/> -->

                        <TextView
                            android:id="@+id/et_maile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/code"
                            android:hint="Email"
                            android:paddingBottom="7dp"
                            android:paddingLeft="12dp"
                            android:text="nizam"
                            android:textColor="#1a3e6e"
                            android:textColorHint="#1a3e6e"
                            android:textSize="13dp" />


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/img_pwd"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/ic_lock_new" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <!-- <TextView  android:layout_width="match_parent"   android:paddingLeft="12dp" android:paddingBottom="7dp"
            android:layout_height="wrap_content" android:textColor="#000000"  android:id="@+id/et_pwd"  android:password = "true"/> -->

                        <TextView
                            android:id="@+id/et_pwde"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/code"

                            android:inputType="textPassword"
                            android:paddingBottom="7dp"
                            android:paddingLeft="12dp"
                            android:textColor="#1a3e6e"
                            android:textColorHint="#1a3e6e"
                            android:textSize="13dp" />


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#30f0c01b"
                    android:orientation="horizontal">

